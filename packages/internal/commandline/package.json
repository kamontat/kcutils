{
  "name": "@kcinternal/commandline",
  "version": "0.24.11",
  "description": "simplify commandline for kamontat repositories",
  "private": false,
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "https://github.com/kamontat/kcutils/tree/main/packages/internal/commandline",
  "bin": {
    "kc-core": "./bin/core.js",
    "kc-clean": "./bin/clean.js",
    "kc-lint": "./bin/lint.js",
    "kc-test": "./bin/test.js",
    "kc-build": "./bin/build.js",
    "kc-start": "./bin/start.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kamontat/kcutils",
    "directory": "packages/internal/commandline"
  },
  "bugs": {
    "email": "developer@kamontat.net",
    "url": "https://github.com/kamontat/kcutils/issues"
  },
  "author": {
    "name": "Kamontat Chantrachirathumrong",
    "email": "developer@kamontat.net",
    "url": "https://github.com/kamontat"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "kcmono",
    "commandline",
    "bash"
  ],
  "files": [
    "package.json",
    "CHANGELOG.md",
    "README.md",
    "lib/**/*.js",
    "lib/**/*.js.map",
    "lib/**/*.d.ts",
    "lib/**/*.d.ts.map",
    "bin/**/*.js"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.prod.json",
    "clean": "rimraf reports lib coverage junit.xml temp dist .rollup.cache",
    "lint": "eslint .",
    "test": "jest",
    "test:mutator": "stryker run"
  },
  "dependencies": {
    "@kcinternal/runners": "0.2.15",
    "del": "6.1.1"
  },
  "devDependencies": {
    "@kcconfig/eslint-config": "0.1.17",
    "@kcconfig/jest-config": "0.1.5",
    "@kcconfig/stryker-config": "0.1.6",
    "@kcconfig/ts-config": "0.1.4",
    "@stryker-mutator/core": "6.0.2",
    "@stryker-mutator/jest-runner": "6.0.2",
    "@stryker-mutator/typescript-checker": "6.0.2",
    "@types/jest": "27.5.0",
    "@types/node": "17.0.41",
    "@typescript-eslint/eslint-plugin": "5.27.1",
    "@typescript-eslint/parser": "5.27.1",
    "eslint": "8.17.0",
    "eslint-plugin-tsdoc": "0.2.16",
    "jest": "27.5.1",
    "jest-junit": "13.2.0",
    "rimraf": "3.0.2",
    "ts-jest": "27.1.4",
    "typescript": "4.7.2"
  },
  "nx": {
    "targets": {
      "build": {
        "outputs": [
          "packages/internal/commandline/lib"
        ]
      },
      "test": {
        "outputs": [
          "packages/internal/commandline/junit.xml",
          "packages/internal/commandline/coverage"
        ]
      }
    }
  }
}
