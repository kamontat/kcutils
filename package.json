{
  "name": "@kcutils/root",
  "version": "0.0.0-development",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "scripts/runner.sh type=run cmd=build",
    "build:ci": "scripts/runner.sh type=run cmd=build",
    "build:init": "scripts/runner.sh type=run cmd=build on=@kcinternal/*",
    "test": "lerna exec yarn test --ignore '@types/*' --ignore '@kcinternal/*'",
    "test:ci": "jest --ci --runInBand",
    "lint": "scripts/runner.sh type=run cmd=lint",
    "lint:ci": "scripts/runner.sh type=run cmd=lint CI=true",
    "clean": "lerna run clean && lerna run clean:cli",
    "clean:all": "lerna run clean -- --all",
    "build:graph": "scripts/runner.sh type=run cmd=build on=@kcutils/graph",
    "start:graph": "scripts/runner.sh type=exec cmd=start on=@kcutils/graph",
    "release": "scripts/release.sh",
    "updated": "scripts/release.sh cmd=updated",
    "updated:ci": "scripts/release.sh cmd=updated CI=true",
    "version:local": "scripts/release.sh cmd=version",
    "version:ci": "scripts/release.sh cmd=version CI=true",
    "release:local": "scripts/release.sh cmd=publish",
    "release:ci": "scripts/release.sh cmd=publish CI=true"
  },
  "devDependencies": {
    "@types/jest": "26.0.9",
    "@types/node": "14.0.27",
    "@typescript-eslint/eslint-plugin": "3.8.0",
    "@typescript-eslint/parser": "3.8.0",
    "eslint": "7.6.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.5",
    "jest": "26.1.0",
    "jest-html-reporters": "2.0.2",
    "jest-junit": "11.0.1",
    "lerna": "3.22.1",
    "prettier": "2.0.5",
    "ts-jest": "26.1.4",
    "ts-loader": "8.0.2",
    "typescript": "3.9.7",
    "webpack": "4.44.1",
    "webpack-cli": "3.3.12"
  }
}
