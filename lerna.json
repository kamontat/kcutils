{
  "version": "independent",
  "npmClient": "yarn",
  "packages": [
    "packages/*",
    "internals/*",
    "typings/lerna_project",
    "typings/package_json"
  ],
  "command": {
    "init": {
      "exact": true
    },
    "version": {
      "allowBranch": ["master", "develop", "feature/*"],
      "message": "chore(release): publish %s"
    },
    "publish": {
      "graphType": "all",
      "message": "chore(release): publish"
    }
  }
}
