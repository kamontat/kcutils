{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/private/*",
    "packages/typings/*",
    "packages/configs/*",
    "packages/internal/*",
    "packages/utilities/*"
  ],
  "command": {
    "init": {
      "exact": true
    },
    "version": {
      "allowBranch": ["main", "develop", "feature/*"],
      "message": "chore(release): publish %s"
    },
    "publish": {
      "graphType": "all",
      "message": "chore(release): publish"
    }
  }
}
